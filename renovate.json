{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>diggsweden/.github:renovate-base"
  ],
  "enabledManagers": [
    "github-actions",
    "maven"
  ],
  "packageRules": [
    {
      "description": "Maven dependencies - Major updates",
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["java", "dependencies", "major-update"],
      "groupName": "java major"
    },
    {
      "description": "Maven dependencies - Non-major updates",
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["java", "dependencies"],
      "groupName": "java non-major"
    },
    {
      "description": "Maven Build Plugins",
      "groupName": "maven build plugins",
      "matchPackageNames": [
        "org.apache.maven.plugins:maven-compiler-plugin",
        "org.apache.maven.plugins:maven-source-plugin",
        "org.apache.maven.plugins:maven-javadoc-plugin",
        "org.apache.maven.plugins:maven-gpg-plugin",
        "org.apache.maven.plugins:maven-enforcer-plugin",
        "org.apache.maven.plugins:maven-deploy-plugin",
        "org.jreleaser:jreleaser-maven-plugin",
        "/^org\\.apache\\.maven\\.plugins:/"
      ]
    },
    {
      "description": "Code quality and formatting tools",
      "groupName": "code quality",
      "matchPackageNames": [
        "net.revelc.code.formatter:formatter-maven-plugin",
        "org.apache.maven.plugins:maven-checkstyle-plugin",
        "com.puppycrawl.tools:checkstyle"
      ]
    },
    {
      "description": "Test dependencies",
      "groupName": "test dependencies",
      "matchPackageNames": [
        "junit:junit"
      ],
      "labels": [
        "test"
      ]
    },
    {
      "description": "Bouncy Castle dependencies",
      "groupName": "bouncy castle",
      "matchPackageNames": [
        "org.bouncycastle:bcprov-jdk18on",
        "org.bouncycastle:bcpkix-jdk18on"
      ]
    },
    {
      "description": "CBOR dependencies",
      "groupName": "cbor",
      "matchPackageNames": [
        "com.upokecenter:cbor"
      ]
    },
    {
      "description": "EdDSA dependencies",
      "groupName": "eddsa",
      "matchPackageNames": [
        "net.i2p.crypto:eddsa"
      ]
    },
    {
      "description": "Code coverage",
      "groupName": "code coverage",
      "matchPackageNames": [
        "org.jacoco:jacoco-maven-plugin"
      ]
    }
  ]
}
