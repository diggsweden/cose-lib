{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices",
    "workarounds:all",
    "security:openssf-scorecard",
    ":configMigration",
    ":dependencyDashboard",
    ":gitSignOff",
    ":maintainLockFilesWeekly",
    ":automergeMinor",
    ":semanticCommits",
    "security:minimumReleaseAgeNpm",
    ":rebaseStalePrs",
    ":semanticCommitTypeAll(chore)",
    "mergeConfidence:all-badges"
  ],
  "commitMessageLowerCase": "auto",
  "minimumReleaseAge": "4 days",
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "5 days",
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "actions"
      ],
      "pinDigests": true,
      "groupName": "github actions"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "slsa-framework/slsa-github-generator"
      ],
      "pinDigests": false
    },
    {
      "description": "Maven Build Plugins",
      "groupName": "maven build plugins",
      "matchPackageNames": [
        "org.apache.maven.plugins:maven-compiler-plugin",
        "org.apache.maven.plugins:maven-source-plugin",
        "org.apache.maven.plugins:maven-javadoc-plugin",
        "org.apache.maven.plugins:maven-gpg-plugin",
        "org.apache.maven.plugins:maven-enforcer-plugin",
        "org.apache.maven.plugins:maven-deploy-plugin",
        "org.jreleaser:jreleaser-maven-plugin",
        "/^org\\.apache\\.maven\\.plugins:/"
      ]
    },
    {
      "description": "Code quality and formatting tools",
      "groupName": "code quality",
      "matchPackageNames": [
        "net.revelc.code.formatter:formatter-maven-plugin",
        "org.apache.maven.plugins:maven-checkstyle-plugin",
        "com.puppycrawl.tools:checkstyle"
      ]
    },
    {
      "description": "Test dependencies",
      "groupName": "test dependencies",
      "matchPackageNames": [
        "junit:junit"
      ],
      "labels": [
        "test"
      ]
    },
    {
      "description": "Bouncy Castle dependencies",
      "groupName": "bouncy castle",
      "matchPackageNames": [
        "org.bouncycastle:bcprov-jdk18on",
        "org.bouncycastle:bcpkix-jdk18on"
      ]
    },
    {
      "description": "CBOR dependencies",
      "groupName": "cbor",
      "matchPackageNames": [
        "com.upokecenter:cbor"
      ]
    },
    {
      "description": "EdDSA dependencies",
      "groupName": "eddsa",
      "matchPackageNames": [
        "net.i2p.crypto:eddsa"
      ]
    },
    {
      "description": "Code coverage",
      "groupName": "code coverage",
      "matchPackageNames": [
        "org.jacoco:jacoco-maven-plugin"
      ]
    }
  ]
}
